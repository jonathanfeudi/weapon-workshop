<!DOCTYPE html>
<html>
  <head>
    <head>
      <%- include ../partials/head %>
    </head>
  </head>
  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
    <%- include ../partials/nav %>
  </nav>
  <div class="col-md-12">
    <h2 class="glitch" data-text="Existing Users">Existing Users</h2>
    <p class="glitchbody" data-text="Login Here">Login here:</p>
      <div class="col-md-2">
        <form action="/users/login" method="post">
          <label class="glitchbody" data-text="Username" for="email">Username</label>
          <input type="text" name="email">
      </div>
      <div class="col-md-2">
          <label class="glitchbody" data-text="Password" for="password">Password</label>
          <input type="text" name="password">
          <input type="submit" value="Login">
      </div>
    </form>
  </div>
  <div class="col-md-12">
    <h2 class="glitch" data-text="New Users">New Users</h2>
    <p class="glitchbody" data-text="Register Here">Register here:</p>
      <div class="col-md-2">
      <form action="/users" method="post">
        <label class="glitchbody" data-text="Username" for="email">Username</label>
        <input type="text" name="email">
      </div>
      <div class="col-md-2">
        <label class="glitchbody" data-text="Password" for="password">Password</label>
        <input type="text" name="password">
        <input type="submit" value="Register">
        <input type="hidden" name="admin" value="false">
      </div>
      </form>
    </div>
  </body>
</html>
