            <form action="/weapons/deletebarrel/<%= barrels[i].barrelid %>?_method=DELETE" method="POST">
              <button>Delete</button>
            </form>
        <% } %>
      </ul>
      <ul>
        <% for(var i = 0; i < stocks.length; i++){ %>
